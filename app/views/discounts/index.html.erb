<h1><%=@merchant.name%></h1>

<h3>My Discounts</h3>
<p><%= link_to 'Create New Discount', new_merchant_discount_path(@merchant) %></p>

<% @merchant.discounts.each do |discount| %>
  <div id="discount-<%= discount.id %>">
      <h4><%= link_to discount.name, merchant_discount_path(@merchant, discount) %></h4>
    <ul>
      <li>Percentage Discount: <%= discount.percentage * 100 %>%</li>
      <li>Quantity Threshold: <%= discount.threshold %></li>
    </ul>
    <%= link_to 'Delete', merchant_discount_path(@merchant, discount), method: :delete %>
  </div>
<% end %>


<div id="holidays">
  <h1>Upcoming Holidays</h1>
  <% @holidays.each do |holiday| %>
    <ul>
      <li>Holiday: <%= holiday.name %> Date: <%= holiday.date %></li>
    </ul>
  <% end %>
</div>
